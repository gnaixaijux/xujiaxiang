
@{
    ViewBag.Title = "Signup";
}

<h2>會員註冊</h2>
@using (Html.BeginForm("Signup", "USER", FormMethod.Post))
{
<p>姓名:@Html.TextBox("name") @ViewBag.Message</p>
<p>帳號:@Html.TextBox("account") @ViewBag.Message</p>
<p>密碼:@Html.TextBox("password") @ViewBag.Message</p>
    <p>@ViewBag.Message</p>
    <input type="submit" value="註冊" />
}
